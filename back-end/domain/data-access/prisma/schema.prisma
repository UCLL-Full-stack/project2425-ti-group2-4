generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
    id                Int @id @default(autoincrement())
    name              String
    sex               String
    dateOfBirth       DateTime
    age               Int
    address           String
    email             String
    complaints        String[]
    nationalRegister  String
    consultations     Consultation[]
}

model Office {
  id                Int         @id @default(autoincrement())
  name              String
  address           String
  email             String
  openingHours      DateTime[]         
  phoneNumber       Int
  doctors           Doctor[]
}

model Doctor {
  id                Int          @id @default(autoincrement())
  name              String
  email             String
  specialization    String     
  offices           Office[]
  consultations     Consultation[]     
  }

model Consultation {
    id                Int      @id @default(autoincrement())
    startDate         DateTime
    endDate           DateTime
    name              String
    patientId         Int
    patient           Patient  @relation(fields: [patientId], references: [id])
    doctors           Doctor[]
}
